{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten"
    },
    {
      "src": "/(.*\\.\\w+)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
